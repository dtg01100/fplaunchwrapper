#!/bin/sh
set -e

case "$1" in
    configure)
        echo "=========================================="
        echo "fplaunchwrapper successfully installed!"
        echo "=========================================="
        echo ""
        echo "Installation location: /usr/lib/fplaunchwrapper"
        echo ""
        echo "IMPORTANT: Per-user setup required"
        echo ""
        echo "Each user should run:"
        echo "  - Generate wrapper scripts in ~/.local/bin:"
        echo "      fplaunch-manage regenerate"
        echo "  - (Optional) Enable automatic updates:"
        echo "      fplaunch-setup-systemd"
        echo "    (Systemd units are NOT enabled by default; running the setup is a user action)"
        echo ""
        echo "Before uninstalling, to clean per-user files run:"
        echo "      fplaunch-cleanup"
        echo ""
        echo "Documentation:"
        echo "  - man fplaunchwrapper"
        echo "  - man fplaunch-manage"
        echo "  - info fplaunchwrapper"
        echo "  - /usr/share/doc/fplaunchwrapper/README.md"
        echo "=========================================="
        ;;
esac

#DEBHELPER#

exit 0
